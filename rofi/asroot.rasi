    background-image:            url("~/.config/hypr/rofi/shared/root-sel.png", width); 
}
element selected.urgent {
    background-color:            transparent;
    text-color:                #f0504c; 
    font:                        "Rajdhani semibold 14"; 
    background-image:            url("~/.config/hypr/rofi/shared/root-sela.png", width);
}
element selected.active {
   background-color:            transparent;
    text-color:               #f0504c;
    font:                       "Rajdhani semibold 14"; 
    background-image:           url("~/.config/hypr/rofi/shared/root-sel.png", width); 
}
element alternate.normal {
      background-color:            transparent;
    text-color:                  #fe6760;
    
    background-image:            url("~/.config/hypr/rofi/shared/root-seln.png", width); 
}
element alternate.urgent {
